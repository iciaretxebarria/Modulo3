@model IEnumerable<VideoclubWebApp.Models.UserFilm>

@{
    ViewData["Title"] = "Index";
}

<h1>Mis Alquileres</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form class="form-inline" asp-controller="UserFilms" asp-action="Index">

    <select class="form-control" name="vigente">


        <option value="true">Alquileres vigentes</option>  @*Returndate>DateTime.Now*@
        <option value="false">Alquileres pasados</option>   @*Returndate<DateTime.Now*@

    </select>
    <div class="form-group mx-sm-3">
        <button class="btn btn-primary" type="submit">Buscar</button>
    </div>

</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateRental)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReturnDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Film)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateRental)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReturnDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Film.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Id)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
